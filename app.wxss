  font-size: 36rpx;
}


.arrow {
  width:80rpx;
  height: 80rpx;
  line-height: 80rpx;
  position: absolute;
  right: 0;
  top: 0;
  box-shadow: 1rpx 0 0 0rpx  rgba(0,0,0,0.2) inset;
  -webkit-shadow: 1rpx 0 0 0rpx  rgba(0,0,0,0.2) inset;
  -o-box-shadow: 1rpx 0 0 0rpx  rgba(0,0,0,0.2) inset;
  -ms-box-shadow: 1rpx 0 0 0rpx  rgba(0,0,0,0.2) inset;
  -moz-box-shadow: 1rpx 0 0 0rpx  rgba(0,0,0,0.2) inset;
   background-color: #fafafa;
}

.arrow::before, .arrow::after {
  content: "";
  position: absolute;
  top: 30%;
  bottom:30%;
  left: 0;
  right:20%;
  box-shadow: 0 0 6rpx rgba(0,0,0,0.3);
  -webkit-box-shadow: 0 0 6rpx rgba(0,0,0,0.3);
  -o-box-shadow: 0 0 6rpx rgba(0,0,0,0.3);
  -moz-box-shadow: 0 0 6rpx rgba(0,0,0,0.3);
  -ms-box-shadow: 0 0 6rpx rgba(0,0,0,0.3);
  z-index:-1;
}
