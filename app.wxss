}
.rotate {
  transform:rotateZ(180deg);
  -ms-transform:rotateZ(-180deg); 	/* IE 9 */
  -moz-transform:rotateZ(-180deg); 	/* Firefox */
  -webkit-transform:rotateZ(-180deg); /* Safari 和 Chrome */
  -o-transform:rotateZ(-180deg); 	/* Opera */
}
.restore {
    transform:rotateZ(0deg);
    -ms-transform:rotateZ(0deg); 	/* IE 9 */
    -moz-transform:rotateZ(0deg); 	/* Firefox */
    -webkit-transform:rotateZ(0deg); /* Safari 和 Chrome */
    -o-transform:rotateZ(0deg); 	/* Opera */
}

.slide-image {
  display: block;
  width: 100%;
  height: 100%;
}
swiper {
  margin: 80rpx 0 0;
  /* 此处给轮播图最外层标签一个固定高度，内部标签继承其高度并overflow：hidden，
  内部图片宽度一定，高度自适应，多出部分会被截掉 */
  height: 420rpx;
}
swiper navigator {
  width: 100%;
  height: 100%;
}

